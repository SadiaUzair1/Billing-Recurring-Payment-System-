<br/>
<%= form_for @user, remote: true do |form| %>
<div class="field mb-3">
  <%= form.label :email %>
  <%= form.text_field :email, class:"form-control", required: true%>
</div>

<div class="field mb-3">
  <%= form.label :password %>
  <%= form.text_field :password, class:"form-control", required: true%>
</div>

<div class="field mb-3">
  <%= form.text_field :userType, class:"form-control", type: :hidden, value: 'buyer'%>
</div>

<br/>
<div class="actions">
  <%= form.submit  class: "btn btn-dark" %>
</div>
<% end %>
