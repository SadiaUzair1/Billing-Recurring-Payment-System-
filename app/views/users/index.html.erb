
<% if @current_user.userType == 'admin'%>
<h1> BUYERS</h1>
<br/>
<br/>
<table class='table table-striped'>
  <thead>
    <tr>
      <th>USER</th>
      <th>STATUS</th>
      <th colspan='2'></th>
    </tr>
  </thead>
  <tbody>
    <% @user.each do |user| %>
        <tr>
          <% if user.userType != 'admin'%>
          <td><%= user.email %></td>
          <td><%= user.userType %></td>
          <td><%= link_to 'SUBSCRIBED', user_plan_usages_path(user.id) ,class: 'btn btn-dark'%></td>
           <td><%= link_to 'Destroy', user_path(user.id),class: 'btn btn-dark', method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <%end%>
    <% end %>
  </tbody>
</table>
  <%else%>
  <%end%>
