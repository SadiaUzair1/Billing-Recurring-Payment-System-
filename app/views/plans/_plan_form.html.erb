<br/>
<%= form_with(model: [@user, @plan], :remote => true) do |form| %>
<div class='field mb-3'>
  <%= form.label :name %>
  <%= form.text_field :name, class:'form-control', required: true%>
</div>

<div class='field mb-3'>
  <%= form.label :Amount, min: 101, required: true %>
  <%= form.number_field :monthly_fee, class:'form-control'%>
</div>

<br/>
<div class='actions'>
  <%= form.submit  class: 'btn btn-dark' %>
</div>
<% end %>
