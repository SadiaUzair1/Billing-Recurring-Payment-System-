<br/>
<%= form_with(model: @plan, :remote => true) do |form| %>
<div class="field mb-3">
  <%= form.label :name %>
  <%= form.text_field :name, class:"form-control"%>
</div>

<div class="field mb-3">
  <%= form.number_field :monthly_fee, class:"form-control" ,value: 0%>
</div>

<br/>
<div class="actions">
  <%= form.submit  class: "btn btn-dark" %>
</div>
<% end %>
