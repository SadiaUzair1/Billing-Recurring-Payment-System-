<h1> PLANS</h1>

<% if @user.admin?%>

  <%= link_to 'ADD PLAN', new_user_plan_path(@user.id)  , class: 'btn btn-dark'  %>
<%end%>

<br/>
<br/>
<table class='table table-striped'>
  <thead>
    <tr>
      <th> NAME </th>
      <th> MONTHLY FEE</th>
      <th colspan = '3'>
    </tr>
  </thead>
  <tbody>

      <% @plans.each do |plan| %>
        <tr>
          <td><%= link_to plan.name, user_plan_path(@user.id ,plan.id), class: 'btn btn-dark' %></td>
          <td><%= number_to_currency(plan.monthly_fee/100) %></td>
          <%= display_options(@user, plan) %>
        </tr>
      <% end %>
      
  </tbody>
</table>

<br>
