<table class="table table-striped">
  <thead>
    <tr>
      <th>name</th>
      <th>monthly_fee</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plan.each do |plan| %>
        <tr>
          <td><%= plan.name %></td>
          <td><%= plan.monthly_fee %></td>
          <td><%= link_to 'FEATURES', plan_features_path(plan.id) ,class: "btn btn-dark"%></td>
          <td><%= link_to 'ADD FEATURE', new_plan_feature_path(plan.id) ,class: "btn btn-dark"%></td>
          <td><%= link_to 'Edit', edit_plan_path(plan),class: "btn btn-dark" %></td>
          <td><%= link_to 'Destroy', plan,class: "btn btn-dark", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  </tbody>
</table>
<br>
